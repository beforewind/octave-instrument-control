#OCT = instrument-control.oct
TOBUILD = @TOBUILD@
SUBDIRS = usbtmc tcp $(TOBUILD)

GPIBLIBS = @GPIBLIBS@
RPCLIBS  = @RPCLIBS@
VISALIBS = @VISALIBS@
export GPIBLIBS
export RPCLIBS
export VISALIBS

MKOCTFILE ?= mkoctfile

.PHONY: clean
.PHONY: realclean
.PHONY: distclean

all:
	@for dir in $(SUBDIRS); do $(MAKE) -C $$dir; done
	
clean:
	 @for dir in $(SUBDIRS); do $(MAKE) -C $$dir clean; done

realclean: clean
	 rm -f *.oct

distclean: realclean
	 rm -rf autom4te.cache
	 rm -f Makefile config.status config.log config.h configure
